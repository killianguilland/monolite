{
  "name": "monolite",
  "version": "1.0.0",
  "description": "Monolite is a set of reusable HTML/CSS elements.",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "concurrently -k -n \"Node\" -c \"yellow.bold,cyan.bold\" \"npm run watch-sass\" \"nodemon ./server.js\"",
    "build": "sass ./static/scss:./static/css",
    "watch-sass": "sass --watch ./static/scss:./static/css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/killianguilland/monolite.git"
  },
  "author": "Killian Guilland",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/killianguilland/monolite/issues"
  },
  "homepage": "https://github.com/killianguilland/monolite#readme",
  "dependencies": {
    "concurrently": "^5.3.0",
    "express": "^4.17.1"
  }
}
